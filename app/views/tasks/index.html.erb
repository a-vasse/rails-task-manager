<%= link_to 'New Task', new_task_path, class: 'btn btn-primary mt-5' %>

<% @tasks.each do |task| %>
 <p>
  <%= link_to task.title, task_path(task), class: 'btn btn-primary m-1' %>
  <% if task.completed %>
  <i class="fa-regular fa-square-check"></i>
  <% else %>
  <i class="fa-regular fa-square"></i>
  <% end %>
 </p>
<% end %>
