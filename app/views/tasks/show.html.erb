<p><%= @task.title %></p>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
  <p>
    <%= link_to 'Main List', tasks_path, class: 'btn btn-primary' %>
    <%= link_to 'Edit Task', edit_task_path(params[:id]), class: 'btn btn-primary' %>
    <%= link_to task_path(@task), data: { turbo_method: 'delete', turbo_confirm: "Are you sure you want to delete '#{@task.title}?" }, class: 'btn btn-light' do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
  </p>
